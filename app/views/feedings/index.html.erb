                <font color="red">Poor</font>
              <% else %>
                <font color="green">Excellant</font>
              <% end %><br>
<br>
<% @user.feedings.each do |f| %>
    Dinosaur: <%= f.dinosaur.name %><br>
    Care:      <%= f.sustenance %><br>
    Time Fed:  <%= f.created_at %><br><br>
<% end %>

