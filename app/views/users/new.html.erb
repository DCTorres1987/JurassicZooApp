<font color="white">
  <h4>Hello Visitor! Create an Account!</h4>

  <%= render partial: 'users/errors', locals: { record: @user } %>

  <%= form_for @user, url: zoo_users_path(@user.zoo.id), method: :post do |w| %>
    <%= w.hidden_field :zoo_id, :value => @user.zoo.id %>

    <p>
      <%= w.label :name %>
      <div><%= w.text_field :name %></div>
    </p>
</font>

  <%= render 'form' %>
  <% end %>